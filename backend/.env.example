# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/mlplatform

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379

# JWT Secret Key (change this in production!)
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# S3/MinIO Storage Configuration
STORAGE_BACKEND=s3
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=ml-models

# Local Storage (alternative to S3)
LOCAL_STORAGE_PATH=./storage

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock

# GPU Support (set to true if you have NVIDIA GPUs)
GPU_ENABLED=false

# Pricing Configuration (per minute)
PRICING_CPU=0.005
PRICING_TESLA_T4=0.02
PRICING_TESLA_V100=0.05
PRICING_RTX_4090=0.03

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Container Resource Limits
MAX_NOTEBOOK_MEMORY_GB=32
MAX_NOTEBOOK_CPU_CORES=16
MAX_NOTEBOOK_STORAGE_GB=500

# Model File Limits
MAX_MODEL_FILE_SIZE_GB=5